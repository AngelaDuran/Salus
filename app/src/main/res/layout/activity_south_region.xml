<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/nighttime_gradient"
    tools:context=".SouthRegionActivity">

    <ImageView
        android:layout_width="481dp"
        android:layout_height="276dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/calmcitypicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inknut_antiqua_bold"
            android:paddingStart="1dp"
            android:text="Encouragement"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:fontFamily="@font/inknut_antiqua_bold"
            android:padding="6dp"
            android:text="Resources"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inknut_antiqua_bold"
            android:text="Users Visited"
            android:layout_marginEnd="2dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"/>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="125dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"/>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_width="118dp"
            android:layout_height="100dp"
            android:layout_marginEnd="15dp"/>
    </LinearLayout>

</LinearLayout>